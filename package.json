{
    "name": "dest",
    "version": "0.0.0",
    "description": "Create desktop applications using a React syntax, on all platforms.",
    "repository": {
        "type": "git",
        "url": "https://github.com/cedrickah/dest"
    },
    "author": "cedrickah",
    "license": "MIT",
    "keywords": [
        "react",
        "native",
        "desktop"
    ],
    "files": [
        "build"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "jest --config jest.config.json",
        "build": "tsc -p ./tsconfig.json --outDir build --declaration true && api-extractor run",
        "pack": "rollup -c",
        "build:pack": "tsc -p ./tsconfig.json --outDir build --declaration true && api-extractor run & rollup -c",
        "docs": "typedoc src --out docs",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "release": "standard-version",
        "prepare": "husky install"
    },
    "dependencies": {
        "gui": "^0.15.3",
        "lodash": "^4.17.21",
        "node-qt-napi": "^0.0.3",
        "prop-types": "^15.8.1",
        "react": "^18.3.1",
        "react-reconciler": "^0.29.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.25.7",
        "@babel/core": "^7.25.8",
        "@babel/node": "^7.25.7",
        "@babel/preset-env": "^7.25.8",
        "@babel/preset-react": "^7.25.7",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@microsoft/api-extractor": "^7.38.5",
        "@rollup/plugin-commonjs": "^25.0.8",
        "@types/eslint": "^8.56.10",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.17.10",
        "@types/node": "^20.12.12",
        "@types/react": "^18.3.11",
        "@types/react-reconciler": "^0.28.8",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "7.9.0",
        "babel-loader": "^9.2.1",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "nexe": "^4.0.0-rc.6",
        "prettier": "^2.8.8",
        "rollup": "^4.6.1",
        "rollup-plugin-dts": "^6.1.1",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.25.4",
        "typescript": "^5.4.5"
    }
}
